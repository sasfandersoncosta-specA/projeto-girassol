// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Ou "mysql", "sqlite", etc.
  url      = env("DATABASE_URL")
}

enum Role {
  PATIENT
  PSYCHOLOGIST
  ADMIN
}

// Modelo para autenticação
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relação 1-para-1 com o perfil do psicólogo
  psychologistProfile PsychologistProfile?
}

// Modelo para os dados do perfil do psicólogo
model PsychologistProfile {
  id        Int      @id @default(autoincrement())
  nome      String
  crp       String   @unique
  cpf       String   @unique
  slug      String   @unique
  status    String   @default("pending") // pending, active, rejected
  plano     String   @default("Semente")
  isAdmin   Boolean  @default(false)
  fotoUrl   String?
  bio       String?
  telefone  String?

  // Campos do questionário
  modalidade             String?
  cep                    String?
  genero_identidade      String?
  valor_sessao_faixa     String?
  temas_atuacao          String[]
  abordagens_tecnicas    String[]
  praticas_vivencias     String[]
  disponibilidade_periodo String[]

  // Chave estrangeira para a relação com User
  userId Int  @unique
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
}